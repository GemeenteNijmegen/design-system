{
  "nijmegen": {
    "card-topics": {
      "base": {
        "background-color": {
          "$type": "color",
          "$value": "{nijmegen.color.wit}"
        },
        "border-color": {
          "$type": "color",
          "$value": "{nijmegen.color.grijs.100}"
        },
        "border-radius": {
          "$type": "borderRadius",
          "$value": "{nijmegen.border-radius.sm}"
        },
        "border-width": {
          "$type": "borderWidth",
          "$value": "{nijmegen.border-width.sm}"
        },
        "text-color": {
          "$type": "color",
          "$value": "{nijmegen.color.zwart}"
        },
        "font-family": {
          "$type": "fontFamilies",
          "$value": "{nijmegen.typography.font-family.secondary}"
        },
        "font-size": {
          "$type": "fontSizes",
          "$value": "{nijmegen.typography.font-size.md}"
        },
        "line-height": {
          "$type": "lineHeights",
          "$value": "{nijmegen.typography.line-height.md}"
        }
      },
      "hover": {
        "text-decoration": {
          "$type": "textDecoration",
          "$value": "{nijmegen.hover.text-decoration}"
        },
        "text-color": {
          "$type": "color",
          "$value": "{nijmegen.color.groen.500}"
        }
      },
      "focus-visible": {
        "border-color": {
          "$type": "color",
          "$value": "{nijmegen.color.groen.900}"
        },
        "border-style": {
          "$type": "border",
          "$value": "dotted"
        },
        "border-width": {
          "$type": "borderWidth",
          "$value": "{nijmegen.border-width.md}"
        }
      },
      "title": {
        "font-size": {
          "$type": "fontSizes",
          "$value": "{1.5rem}"
        }
      },
      "content": {
        "padding": {
          "inline": {
            "$type": "spacing",
            "$value": "{nijmegen.space.block.xl}"
          },
          "block-start": {
            "$type": "spacing",
            "$value": "{nijmegen.space.block.xl}"
          },
          "block-end": {
            "$type": "spacing",
            "$value": "{nijmegen.space.block.2xl}"
          }
        },
        "row": {
          "block-gap": {
            "$type": "spacing",
            "$value": "{nijmegen.space.block.md}"
          }
        }
      },
      "icon": {
        "size": {
          "$type": "sizing",
          "$value": "{nijmegen.size.icon.lg}"
        }
      }
    }
  }
}